<main class="min-h-screen">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        Building <span class="hero-highlight">experiences</span><br>
        for myself, for you to enjoy
      </h1>
      <p class="hero-subtitle">Welcome to my project showcase</p>
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects-section">
    <div class="projects-container">
      <% if @projects.any? %>
        <div class="projects-grid">
          <% @projects.each do |project| %>
            <div class="project-folder">
              <div class="project-icon">üìÅ</div>
              <div class="project-content">
                <h3 class="project-title">
                  <%= link_to project.name, project_path(project), class: "project-link" %>
                </h3>
                <p class="project-description"><%= project.description %></p>
                <% if project.link.present? %>
                  <a href="<%= project.link %>" target="_blank" rel="noopener" class="external-link">
                    View Project <span class="external-icon">‚Üó</span>
                  </a>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="no-projects">
          <div class="empty-folder">üìÅ</div>
          <p>No projects yet. Check back soon!</p>
          <%= link_to "View All Projects", projects_path, class: "projects-link" %>
        </div>
      <% end %>
    </div>
  </section>
</main>
