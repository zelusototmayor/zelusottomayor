<% content_for :title, "Work & Case Studies - Ze Lu Sottomayor" %>
<% content_for :meta_description, "Selected projects including AI tools and automation systems. See how I build practical solutions for real problems." %>

<div class="page-hero">
  <div class="flowing-lines-bg"></div>
  <div class="container">
    <h1 class="page-hero-title text-reveal">Work & Case Studies</h1>
    <p class="page-subtitle text-lead text-reveal">
      Real projects, real results. See how I help teams automate operations and ship products.
    </p>
  </div>
</div>

<section class="work-section section-padding">
  <div class="container">
    <% if @projects.present? && @projects.any? %>
      <div class="work-tabs" data-controller="tabs">
        <div class="tabs-nav">
          <button class="tab-button active" data-action="click->tabs#show" data-category="all">
            All (<%= @projects.count %>)
          </button>
          <button class="tab-button" data-action="click->tabs#show" data-category="automation">
            Automations (<%= @automation_projects.count %>)
          </button>
          <button class="tab-button" data-action="click->tabs#show" data-category="client">
            Client Work (<%= @client_projects.count %>)
          </button>
          <button class="tab-button" data-action="click->tabs#show" data-category="product">
            Products (<%= @product_projects.count %>)
          </button>
        </div>
      </div>

      <div class="case-studies-grid">
        <% @projects.each do |project| %>
          <%= render 'shared/project_card', project: project %>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <h2>Case studies coming soon</h2>
        <p>I'm currently documenting recent projects. Check back soon, or <%= link_to "reach out", contact_path %> to discuss your needs.</p>
        <%= link_to "Contact me", contact_path, class: "cta-button cta-button--primary" %>
      </div>
    <% end %>
  </div>
</section>

<%= render 'shared/cta_section',
    headline: "Like what you see?",
    subheadline: "Let's discuss how I can help with your project.",
    button_text: "Book a call",
    button_url: book_call_path,
    secondary_text: "View services",
    secondary_url: root_path(anchor: 'services') %>
